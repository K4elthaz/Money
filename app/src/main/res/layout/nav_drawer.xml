<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/color_green_transparent"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewIcon1"
            android:layout_width="205dp"
            android:layout_height="75dp"
            android:background="@drawable/about1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imageViewIcon2"
            android:layout_width="205dp"
            android:layout_height="75dp"
            android:background="@drawable/userguide1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imageViewIcon3"
            android:layout_width="205dp"
            android:layout_height="75dp"
            android:background="@drawable/developers1"
            android:clickable="true" />

    </LinearLayout>

</LinearLayout>