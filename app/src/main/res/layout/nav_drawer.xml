<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_drawer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hidemenu"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_drawer1"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/color_green_transparent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageViewIcon1"
            android:layout_width="205dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/about1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imageViewIcon2"
            android:layout_width="205dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/userguide1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imageViewIcon3"
            android:layout_width="205dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/developers1"
            android:clickable="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>